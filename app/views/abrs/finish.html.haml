    = @abr.partner.external_conversion_snippet.to_s.html_safe

  %h2= t('txt.abr.finish_header', state_name: @abr.home_state_name)

  .finish_instructions
    %ol
      %li
        = t('txt.abr.finish_instructions_1', registrar_address: @abr.state_registrar_address).html_safe
