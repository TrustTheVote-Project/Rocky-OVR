- #TODO move to new layout
- content_for :subnav do
  - @nav_class[:branding] = :current
  - @nav_class[:customize] = :current
  = render :partial => "layouts/customize_nav"

#customize_nav
  %p
    = link_to I18n.t('partners.branding.title', default: 'Setup Custom Branding'), '#', class: :current
    |
    = link_to I18n.t('partners.branding.preview_and_submit_title', default: 'Preview & Submission'), partner_branding_approval_path, id: "preview_and_submission_link"

  %p.switcher(data-hide-class = 'nav-items')
    = link_to "Assets", '#', class: :current, 'data-show-class' => 'assets'
    |
    = link_to "CSS", '#', 'data-show-class' => 'css'
    |
    = link_to "E-Mail templates", '#', 'data-show-class' => 'emails'

.text
  %p= I18n.t('partners.branding.description.general', default: 'Custom Branding feature description')

= form_for @partner, url: partner_branding_path, method: :put, :html => { :multipart => true } do |f|
  %fieldset.nav-items.css
    %legend Whitelabeled CSS
    = render partial: "list", locals: { key: "partners.branding.description.css"}
    = render partial: 'css', locals: { f: f}

  %fieldset.nav-items.assets
    %legend Assets
    = render partial: "list", locals: { key: "partners.branding.description.assets"}
    = render partial: 'assets', locals: { f: f }

  %fieldset.nav-items.emails
    %legend E-Mail templates
    = render partial: "list", locals: { key: "partners.branding.description.email_templates"}
    = render partial: 'admin/shared/custom_emails', locals: { prefix: "preview_" }

  = partner_rollover_button 'update', 'Update'
