<script>
  var ls = window.localStorage
  window.IS_TOUCH_ENABLED = false;
  if (ls && ls.getItem('IS_TOUCH_ENABLED')) {
    window.IS_TOUCH_ENABLED = true;
    window.registerTouch();
  } else {
    window.addEventListener('touchstart', function onFirstTouch() {
      // or set some global variable
      window.IS_TOUCH_ENABLED = true;
      if (ls) {
        ls.setItem('IS_TOUCH_ENABLED', true);
      }
      window.registerTouch();
      // we only need to know once that a human touched the screen, so we can stop listening now
      window.removeEventListener('touchstart', onFirstTouch, false);
    }, false);
  } 
</script>

<% if params[:iframe] == 'true' || (@registrant && @registrant.iframe_param_present?) %>
  <!-- iframed-->
  <script>
    // Scroll the specified iframe to the top
    function scrollToTopOfIframe(iframe) {
      if (iframe) {
        iframe.contentWindow.scrollTo(0, 0);
      }
    }

    // Add event listener to form submit buttons to call scrollToTopOfIframe function
    document.addEventListener('DOMContentLoaded', function() {
      // Function to handle button click
      function handleButtonClick(event) {
        // Get the closest parent form element
        var form = event.target.closest('form');
        if (!form) return; // Exit if form not found

        // Find the iframe within the same form
        var iframe = form.querySelector('iframe');
        if (!iframe) return; // Exit if iframe not found

        // Scroll the iframe content to the top
        scrollToTopOfIframe(iframe);
        console.log('Scrolled to the top of iframe:', iframe);
      }

      // Attach event listener to form submit buttons
      var buttons = document.querySelectorAll('button[type="submit"]');
      buttons.forEach(function(button) {
        button.addEventListener('click', handleButtonClick);
      });
    });
  </script>
<% end %>


