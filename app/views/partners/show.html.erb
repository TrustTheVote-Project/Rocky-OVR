<% @nav_class[:dashboard] = :current -%>

<h1>Welcome <%= @partner.name %>!</h1>

<p>
  With your Partner Dashboard, you can customize your tool and copy and paste the HTML code to embed
  your online registration tool on your website. You can access statistics and download registration
  data about the people you are registering to vote. You can also modify your partner profile.
</p>

<div id="dashboard">
  <div id="dash_right" class="dash">
    <div id="customizations" class="stats">
      <table cellspacing="0">
        <thead><tr><th colspan="3">Customize Your Registration Tool</th></tr></thead>
        <tbody>
          <tr class="odd">
            <th>
              <ul>
                <li><%= link_to "Add custom survey questions and set volunteer sign up options", edit_partner_questions_path %></li>
                <li><%= link_to "Upload your own custom logo", partner_logo_path %></li>
                <li><%= link_to "Get custom buttons and banners", partner_widget_image_path %></li>
                <li><%= link_to "Get your embed code", embed_codes_partner_path %></li>
              </ul>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
    <%= rollover_image_link("link_customizetool", "Customize Tool", partner_logo_path, id: "link_customizetool") %>
    <%= rollover_image_link("link_editprofile", "Edit Profile", edit_partner_path, id: "link_editprofile") %>
  </div>

  <div id="dash_left" class="dash">
    <%= render :partial => 'stats_by_completion_date' %>
    <%= rollover_image_link("link_viewreport", "View Full Report and Download Data", statistics_partner_path, id: "link_viewreport") %>
  </div>
</div>
