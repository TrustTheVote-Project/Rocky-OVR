<% if @registrant.home_state_abbrev != "CO" %>
  <ul class="flat race-dropdown">
    <li class='registrant-form__race__line'>
      <h3><%= form.label :race %><%- if @registrant.requires_race? %><span class='required'>*<span class='required--text' style='display:none;'><%= I18n.t('required') %></span></span><%- end %></h3>
      <div><%= form.select :race, @registrant.races, :include_blank => true %></div>
      <div class="tooltip"><%= tooltip_tag :race, @race_tooltip %></div>
      <span class="error"><%= form.object.errors[:race].join("\n") %></span>
    </li>
  </ul>
<% end %>
<% if @state_parties && @state_parties.any? %>
  <ul class="flat party-dropdown">
    <li class='registrant-form__party__line'>
      <h3><%= form.label :party %><%- if @registrant.requires_party? %><span class='required'>*<span class='required--text' style='display:none;'><%= I18n.t('required') %></span></span><%- end %></h3>
      <%= select_div form, :party, @state_parties, {:include_blank => true, required: @registrant.requires_party?} %>
      <div class="tooltip"><%= tooltip_tag :party, @party_tooltip %></div>
      <span class="error"><%= form.object.errors[:party].join("\n") %></span>
    </li>
  </ul>
<% end %>
