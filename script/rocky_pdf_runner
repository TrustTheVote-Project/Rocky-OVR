#!/usr/bin/env ruby
require 'rubygems'
require 'daemons'

script = File.join(File.dirname(__FILE__), 'rocky_pdf_worker')
#dir = File.expand_path(File.join(File.dirname(__FILE__), '..'))

Daemons.run(script, :ARGV => ARGV,
            :mode => :exec,
            :dir_mode => :script,
            :dir => '../tmp/pids',
            :log_output => true,
            :monitor => false,
            :multiple => true)